---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"svg"> {
  /** Accessible label for the icon. When provided, sets aria-label and role="img". */
  label?: string;
  /** SVG viewBox attribute. Defaults to "0 0 24 24". */
  viewBox?: string;
  /** Vertical alignment for inline display. */
  verticalAlign?: string;
}

const { label, viewBox = "0 0 24 24", ...rest } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width="1em"
  height="1em"
  viewBox={viewBox}
  aria-label={label}
  role={label ? "img" : undefined}
  aria-hidden={label ? undefined : "true"}
  {...rest}
>
  <slot />
</svg>
