---
interface Props {
	class?: string;
	link?: boolean;
	primary?: boolean;
	[k: string]: unknown;
}
const { class: extraClasses, primary, link = false, ...props } = Astro.props;
const classes = [
	"border",
	"border-blackish",
	"border-2",
	"py-1",
	"px-6",
	"rounded-lg",
	"transition",
	primary && "bg-blackish",
	primary && "text-sepia",
	"hover:opacity-30",
	"active:opacity-70",
	"dark:bg-sepia",
	"dark:text-blackish",
	"underline",
	extraClasses,
];
---
{link && <a class:list={classes} {...props}><slot /></a>}
{!link && <button class:list={classes} {...props}><slot /></button>}
