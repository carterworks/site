---
interface Props {
	class?: string;
	href: string;
	underline?: boolean;
	[key: string]: unknown;
}
const { class: extraClasses = "", underline = true, ...rest } = Astro.props;
---

<a
	{...rest}
	class:list={[
		"hover:opacity-30",
		"transition-opacity",
		underline && "underline",
		extraClasses,
	]}
>
	<slot />
</a>
