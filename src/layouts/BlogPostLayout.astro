---
import A from "../components/A.astro";
import Heading from "../components/Heading.astro";
import Prose from "../components/Prose.astro";
import PageWithHeaderLayout from "./PageWithHeaderLayout.astro";
export interface Props {
	title: string;
	frontmatter: {
		title: string;
		description: string;
		pubDate: Date;
		tags: string[];
		originalUrl?: string;
		additionalMetadata?: string[];
	};
}

const { frontmatter } = Astro.props;
const humanFriendlyDate = new Date(frontmatter.pubDate).toLocaleDateString(
	"en-US",
	{
		year: "numeric",
		month: "long",
		day: "numeric",
	},
);
---

<PageWithHeaderLayout
	title={`${frontmatter.title} | carter.works`}
	class="*:mx-auto"
>
	<Fragment slot="head">
		<meta property="og:title" content={frontmatter.title} />
		<meta property="og:type" content="article" />
		<meta name="description" property="og:description" content={frontmatter.description} />
		<meta
			property="og:article:published_time"
			content={frontmatter.pubDate.toISOString()}
		/>
		<meta property="og:article:author" content="Carter McBride" />
		<meta property="og:article:tag" content={frontmatter.tags.join(", ")} />
	</Fragment>

	<article>
		<header class="text-sm mb-4">
			<Heading level={1}>
				{!frontmatter.originalUrl && frontmatter.title}
				{frontmatter.originalUrl && (
					<A href={frontmatter.originalUrl}>{frontmatter.title}</A>
				)}
			</Heading>
			<time datetime={frontmatter.pubDate.toISOString()}
				>{humanFriendlyDate}</time
			>
			{
				frontmatter.tags.length > 0 && (
					<ul class="">
						{frontmatter.tags.map((tag: string) => (
							<li class="inline-block mr-2">#{tag}</li>
						))}
					</ul>
				)
			}
			{
				frontmatter.additionalMetadata && (
					<p class="text-sm">
						{frontmatter.additionalMetadata.join(" ãƒ» ")}
					</p>
				)
			}
			<p class="mt-4 text-base italic">
				{frontmatter.description}
			</p>
			<div class="mt-4">
				<slot name="controls"/>
			</div>
		</header>
		<Prose>
			<slot />
		</Prose>
	</article>
</PageWithHeaderLayout>
